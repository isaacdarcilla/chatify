model User {
  id        Int       @id @default(autoincrement())
  name      String?
  rooms     Room[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())
}

model Room {
  id        Int       @id @default(autoincrement())
  name      String?
  owner     User      @relation(fields: [ownerId], references: [id])
  ownerId   Int
  code      String
  slug      String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())
}
